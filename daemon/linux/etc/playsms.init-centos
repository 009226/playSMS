#!/bin/sh
#!/bin/bash
# playsms daemon
# chkconfig: 3456 20 80
# description: playsms daemon
# processname: playsms

PLAYSMS_BIN=/usr/local/bin

# DO NOT CHANGE BELOW THIS LINE

. /lib/lsb/init-functions

DAEMON=$PLAYSMS_BIN/playsmsd

if [ ! -x $DAEMON ]; then
	echo "[ERROR] Unable to find and run playsmsd"
	exit 1
fi

case "$1" in
  start)
    echo "Starting playsms daemon"
    echo -n "playsmsd"
    $DAEMON start >/dev/null 2>&1
    echo "[OK]"
    ;;

  stop)
    echo "Stopping playsms daemon"
    echo -n "playsms"
    $DAEMON stop >/dev/null 2>&1
    echo "[OK]"
    ;;

  status)
    RUNNING=`ps uf -C playsmsd | grep schedule`
    if [ -n "$RUNNING" ]; then
	echo "playsmsd schedule is running"
    else
	echo "[ERROR] playsmsd schedule is not running"
    fi
    ;;

  reload|restart|force-reload)
    $0 stop
    sleep 2
    $0 start
    ;;

  *)
    echo "Usage: $0 {status|start|stop|restart}"
    exit 1

esac

exit 0
